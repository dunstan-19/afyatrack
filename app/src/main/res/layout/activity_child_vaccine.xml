<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_light_yellow">

    <!-- Toolbar with Navigation Icons -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_emerald"
        app:titleTextColor="@color/white"
        app:title="Child Vaccination">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">

            <!-- Title -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Child Vaccine"
                android:fontFamily="@font/merienda"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Navigation Icons on Right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Home Icon -->
                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_home_24"
                    android:contentDescription="Home"
                    android:padding="8dp"
                    app:tint="@color/white" />

                <!-- Settings Icon -->
                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/settings_b_roll_24px"
                    android:contentDescription="Settings"
                    android:padding="8dp"
                    app:tint="@color/white" />

                <!-- Help Icon -->
                <ImageButton
                    android:id="@+id/btn_help"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/help_24px"
                    android:contentDescription="Help"
                    android:padding="8dp"
                    app:tint="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHILD VACCINE DASHBOARD"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <!-- Child Selection Layout -->
    <LinearLayout
        android:id="@+id/childSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        android:visibility="gone"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Child:"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerChildren"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"/>

        <ImageButton
            android:id="@+id/btnManageChildren"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_person_pin_24"
            android:contentDescription="Manage Children"
            android:padding="8dp"
            app:tint="@color/primary_emerald" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- NEW USER CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/newUserCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/primary_emerald"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:padding="28dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/avator"
                        android:layout_marginBottom="16dp"
                        app:tint="@color/primary_emerald" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Welcome!"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Register your child to get personalized vaccine recommendations"
                        android:textColor="@color/text_secondary"
                        android:textAlignment="center"
                        android:paddingHorizontal="16dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Register now to:\n✓ Track your child's vaccine schedule\n✓ Book Appointments\n  ✓Get notifications and reminders"
                        android:textColor="@color/text_secondary"
                        android:textAlignment="center"
                        android:paddingHorizontal="16dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/btnRegisterChild"
                        android:layout_marginTop="24dp"
                        android:text="Register Child"
                        android:icon="@drawable/baseline_add_24"
                        app:cornerRadius="24dp"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"
                        app:backgroundTint="@color/primary_emerald"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- EXISTING CHILD DASHBOARD -->
            <LinearLayout
                android:id="@+id/existingChildDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <!-- CHILD PROFILE CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="16dp"
                   >

                    <LinearLayout
                        android:padding="24dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgChildAvatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvChildName"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:id="@+id/tvChildAge"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvChildGender"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary"
                                    android:drawablePadding="4dp"
                                    />

                                <TextView
                                    android:id="@+id/tvBirthWeight"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginStart="16dp"
                                    android:textColor="@color/text_secondary"
                                    android:drawablePadding="4dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- HEALTH CONDITION BADGE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/healthConditionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/light_blue"
                    app:strokeColor="@color/primary_blue"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_health_and_safety_24"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/primary_blue" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Special Health Conditions"
                                android:textStyle="bold"
                                android:textColor="@color/primary_blue"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tvHealthConditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="None reported"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvHealthStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Normal"
                            android:background="@drawable/bg_normal_status"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- VACCINE RECOMMENDATIONS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaccine Schedule Overview"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"/>

                <!-- URGENT VACCINE CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/urgentVaccineCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/light_red"
                    app:strokeColor="@color/primary_red"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/baseline_warning_amber_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_red" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="URGENT VACCINATION"
                                android:textStyle="bold"
                                android:textColor="@color/primary_red"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/tvUrgentDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IN 3 DAYS"
                                android:background="@drawable/bg_urgent_badge"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvUrgentVaccine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="No urgent vaccines required"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:id="@+id/tvUrgentReason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- DUE VACCINE CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dueVaccineCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/light_orange"
                    app:strokeColor="@color/primary_orange"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/calendar_clock_24px"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_orange" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DUE VACCINATION"
                                android:textStyle="bold"
                                android:textColor="@color/primary_orange"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDueVaccine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="No due vaccines"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:id="@+id/tvDueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- NEXT VACCINE CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/nextVaccineCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/light_green"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/calendar_clock_24px"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_green" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="NEXT SCHEDULED"
                                android:textStyle="bold"
                                android:textColor="@color/primary_green"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvNextVaccine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="No upcoming vaccines"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:id="@+id/tvNextDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- MISSED VACCINES ALERT -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/missedVaccineCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="14dp"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="@color/light_yellow"
                    app:strokeColor="@color/primary_yellow"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/baseline_add_alert_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_yellow" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="MISSED VACCINES ALERT"
                                android:textStyle="bold"
                                android:textColor="@color/primary_yellow"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/tvMissedCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:background="@drawable/bg_missed_badge"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMissedVaccines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="No missed vaccines"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:id="@+id/tvMissedRecommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ADD ANOTHER CHILD BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Another Child"
                    android:icon="@drawable/baseline_add_24"
                    app:cornerRadius="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:paddingVertical="14dp"
                    app:backgroundTint="@color/primary_emerald"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@color/emerald"
        app:itemTextColor="@color/emerald"
        app:labelVisibilityMode="labeled"/>
</LinearLayout>