<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp"
    android:padding="16dp"
    android:background="@drawable/bg_rounded_light_purple">

    <TextView
        android:id="@+id/tvDateTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 Dec 2023"
        android:textColor="@color/primary_blue"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BP:"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvBloodPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120/80 mmHg"
            android:textColor="@color/text_primary"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight:"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65 kg"
            android:textColor="@color/text_primary"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fetal HR:"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvFetalHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140 bpm"
            android:textColor="@color/text_primary"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fundal Height:"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvFundalHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 cm"
            android:textColor="@color/text_primary"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>