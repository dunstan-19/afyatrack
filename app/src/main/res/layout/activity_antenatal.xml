<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light_yellow">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_emerald"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Title -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Antenatal Care"
                android:fontFamily="@font/merienda"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Navigation Icons on Right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_home_24"
                    android:contentDescription="Home"
                    android:padding="8dp"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/settings_b_roll_24px"
                    android:contentDescription="Settings"
                    android:padding="8dp"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/btn_help"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/help_24px"
                    android:contentDescription="Help"
                    android:padding="8dp"
                    app:tint="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main Content Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Welcome Screen (for new users) -->
            <LinearLayout
                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ANTENATAL CARE DASHBOARD"
                    android:fontFamily="serif"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Welcome Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/welcomeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/pregnancyIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/woman"
                            app:tint="@color/emerald" />

                        <TextView
                            android:id="@+id/welcomeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Welcome!"
                            android:textAlignment="center"
                            android:textColor="@color/text_primary"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/pregnancyStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start your beautiful pregnancy journey with us!"
                            android:textAlignment="center"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="24dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/registerButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Register for ANC"
                            android:layout_gravity="center"
                            android:icon="@drawable/baseline_add_24"
                            app:cornerRadius="24dp"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            android:paddingHorizontal="32dp"
                            android:paddingVertical="12dp"
                            app:backgroundTint="@color/primary_emerald"
                            android:textColor="@color/white"/>

                        <ProgressBar
                            android:id="@+id/loadingProgress"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Dashboard (for registered users) -->
            <LinearLayout
                android:id="@+id/dashboardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <!-- Mother Information Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/motherInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"

                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/motherAvatar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/girlavatar"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/primary_emerald" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMotherName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mother's Name"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvMotherAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age: Not specified"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewProfileButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:icon="@drawable/baseline_person_pin_24"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            app:backgroundTint="@color/emerald"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Missed Visit Alert Card -->
                 <com.google.android.material.card.MaterialCardView
                    android:id="@+id/missedVisitCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#FFF3E0"
                    app:strokeColor="@color/primary_red"
                    app:strokeWidth="2dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_warning_amber_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_red" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="MISSED VISIT ALERT"
                                android:textColor="@color/text_primary"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMissedVisitInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No missed visits detected"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Pregnancy Progress Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/progressCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/primary_orange"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/light_orange"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PREGNANCY PROGRESS"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/woman"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_orange" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWeeksPregnant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 weeks"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/tvTrimester"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Trimester"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/pregnancyProgress"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            app:trackColor="@color/text_secondary"
                            app:trackThickness="8dp"
                            app:indicatorColor="@color/primary_orange"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Week 1"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Due Date"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Week 40"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textAlignment="textEnd"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:padding="12dp"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/calendar_clock_24px"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/primary_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Expected Due Date: "
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tvDueDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Next Visit Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/nextVisitCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:strokeColor="@color/primary_blue"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/light_blue"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="APPOINTMENTS"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Last Visit"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tvLastVisit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No visits yet"
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Next Visit"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tvNextVisit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not scheduled"
                                    android:textColor="@color/primary_blue"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:id="@+id/btn_schedule"
                            android:layout_height="wrap_content"
                            android:text="Schedule Appointment"
                            android:icon="@drawable/calendar_clock_24px"
                            app:iconGravity="textStart"
                            app:cornerRadius="12dp"
                            android:paddingVertical="12dp"
                            app:backgroundTint="@color/primary_blue"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Health Information Card -->
                 <com.google.android.material.card.MaterialCardView
                    android:id="@+id/healthCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="@color/primary_emerald"
                    app:strokeWidth="2dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HEALTH INFORMATION"
                            android:textColor="@color/text_secondary"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:padding="12dp"
                            >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/blood"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/emerald" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Blood Group"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                app:layout_column="0"
                                app:layout_row="0"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvBloodGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not specified"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_column="1"
                                app:layout_row="0"
                                app:layout_gravity="end"
                                android:layout_marginBottom="8dp"/>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:padding="12dp"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/weight"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/emerald" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            app:layout_column="0"
                            app:layout_row="0"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_column="1"
                            app:layout_row="0"
                            app:layout_gravity="end"
                            android:layout_marginBottom="8dp"/>

                    </LinearLayout>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gravida"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                app:layout_column="0"
                                app:layout_row="1"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvGravida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not specified"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_column="1"
                                app:layout_row="1"
                                app:layout_gravity="end"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parity"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                app:layout_column="0"
                                app:layout_row="2"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvParity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not specified"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_column="1"
                                app:layout_row="2"
                                app:layout_gravity="end"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Facility Type"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                app:layout_column="0"
                                app:layout_row="3"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvFacilityType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not specified"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_column="1"
                                app:layout_row="3"
                                app:layout_gravity="end"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Plan"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                app:layout_column="0"
                                app:layout_row="4"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvDeliveryPlan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not specified"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_column="1"
                                app:layout_row="4"
                                app:layout_gravity="end"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Report Health Issue Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/reportIssueCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">



                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="REPORT HEALTH ISSUE"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Report any unusual symptoms (e.g., bleeding, severe headache, pain)"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginBottom="12dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:hintTextColor="@color/primary_emerald"
                            app:boxStrokeColor="@color/primary_emerald"
                            android:hint="Describe your health issue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtHealthIssue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:maxLines="3"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sendReportButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Send Report"

                            app:iconGravity="textStart"
                            app:cornerRadius="12dp"
                            android:paddingVertical="12dp"
                            app:backgroundTint="@color/primary_emerald"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Doctor's Recommendations Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/recommendationCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#E8F5E9"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">



                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DOCTOR'S RECOMMENDATIONS"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvRecommendation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No recommendations made yet. Your doctor will provide personalized recommendations during your next visit."
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:lineSpacingExtra="6dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/emerald"
        app:itemTextColor="@color/emerald"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>