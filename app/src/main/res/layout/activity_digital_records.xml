<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/emerald"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Records"

        app:titleTextColor="@color/white" />

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Selection Card -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Child:"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <Spinner
                        android:id="@+id/spinnerChildren"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/spinner_background"
                        android:paddingStart="12dp"/>

                </LinearLayout>


            <!-- Loading State -->
            <LinearLayout
                android:id="@+id/llLoading"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading health records..."
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Records Container (Hidden by Default) -->
            <LinearLayout
                android:id="@+id/llRecordsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Report Header -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/primary_blue"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Report Title -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/baseline_health_and_safety_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_blue" />

                            <TextView
                                android:id="@+id/tvReportTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="CHILD HEALTH RECORD"
                                android:textColor="@color/primary_blue"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvReportDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Generated: Today"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <!-- Child Profile -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="24dp"
                            android:padding="16dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CHILD PROFILE"
                                android:textColor="@color/primary_blue"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp"/>

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:stretchColumns="*">

                                <TableRow
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Full Name:"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:id="@+id/tvChildName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Not specified"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"
                                        android:textStyle="bold"/>
                                </TableRow>

                                <TableRow
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Gender:"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:id="@+id/tvChildGender"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Not specified"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"/>
                                </TableRow>

                                <TableRow
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Age:"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:id="@+id/tvChildAge"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Not specified"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"/>
                                </TableRow>

                                <TableRow
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Date of Birth:"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:id="@+id/tvChildDOB"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Not specified"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"/>
                                </TableRow>

                                <!-- Additional fields from your database -->
                                <TableRow
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Birth Weight:"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:id="@+id/tvBirthWeight"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Not specified"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"/>
                                </TableRow>

                                <TableRow
                                    android:layout_marginBottom="8dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Birth Place:"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:id="@+id/tvBirthPlace"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Not specified"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"/>
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Guardian:"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:id="@+id/tvGuardian"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Not specified"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"/>
                                </TableRow>

                            </TableLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Vaccination Records -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/vaccines_24px"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_green" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="VACCINATION HISTORY"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <!-- Vaccination Records Table -->
                        <LinearLayout
                            android:id="@+id/llVaccinationRecords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Default message when no records -->
                            <TextView
                                android:id="@+id/tvNoVaccinations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:text="No vaccination records available"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Health Conditions -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_healing_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_orange" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="HEALTH CONDITIONS"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <!-- Health Conditions Content -->
                        <TextView
                            android:id="@+id/tvHealthConditions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Doctor's Recommendations -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_notes_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_blue" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DOCTOR'S RECOMMENDATIONS"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <!-- Recommendations Content -->
                        <TextView
                            android:id="@+id/tvDoctorRecommendations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Other Medical History -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_history_24"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_purple" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="OTHER MEDICAL HISTORY"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <!-- History Content -->
                        <TextView
                            android:id="@+id/tvMedicalHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/primary_blue"
                    app:strokeColor="@color/primary_blue"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Export Health Record"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download or share this health record"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDownload"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="DOWNLOAD PDF"
                                android:textColor="@color/primary_blue"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="8dp"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnShare"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="SHARE"
                                android:textColor="@color/white"
                                app:backgroundTint="@color/primary_green"
                                app:cornerRadius="8dp"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                app:iconTint="@color/white"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/llEmptyState"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/baseline_health_and_safety_24"
                    android:layout_marginBottom="24dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Child Selected"
                    android:textColor="@color/text_secondary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a child from the dropdown above to view their health records"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>